{
  "name": "@schrobak/media-ingest",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "services/**"
  ],
  "prettier": {
    "printWidth": 120
  },
  "jest": {
    "coverageDirectory": "reports",
    "coverageReporters": [
      "text-summary",
      "clover"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "<rootDir>/tsconfig.test.json"
      }
    },
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@types/jest": "26.0.23",
    "@types/node": "15.12.4",
    "@typescript-eslint/eslint-plugin": "4.28.0",
    "@typescript-eslint/parser": "4.28.0",
    "dotenv": "10.0.0",
    "eslint": "7.29.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest": "24.3.6",
    "eslint-plugin-prettier": "3.4.0",
    "jest": "27.0.5",
    "jest-junit": "12.2.0",
    "prettier": "2.3.1",
    "ts-jest": "27.0.3",
    "ts-node-dev": "1.1.6",
    "typescript": "4.3.4"
  },
  "engines": {
    "node": "16.3.0"
  },
  "jest-junit": {
    "suiteName": "tests",
    "outputDirectory": "reports"
  }
}
